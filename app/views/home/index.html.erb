<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center w-full">
  <div class="w-full space-y-8 text-center">
    <!-- Logo/Brand -->
    <div>
      <h1 class="text-4xl font-bold text-gray-900 mb-2">CallScribe</h1>
      <p class="text-xl text-gray-600">Your AI-powered call transcription solution</p>
    </div>

    <!-- Hero Content -->
    <div class="mt-8 space-y-6">
      <div class="bg-white rounded-lg shadow-md p-8">
        <div class="space-y-6">
          <div>
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">Get Started</h2>
            <p class="text-gray-600 mb-8">Join thousands of professionals who trust CallScribe for accurate call transcriptions.</p>
          </div>

          <!-- Action Buttons -->
          <div class="space-y-4">
            <%= link_to "Sign Up", new_user_registration_path, 
                class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 font-medium transition-colors duration-200" %>
            
            <%= link_to "Log In", new_user_session_path, 
                class: "w-full flex justify-center py-3 px-4 border border-gray-300 rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 font-medium transition-colors duration-200" %>
          </div>
        </div>
      </div>

      <!-- Features -->
      <div class="grid grid-cols-1 gap-4 text-sm text-gray-600">
        <div class="flex items-center justify-center space-x-2">
          <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span>AI-powered transcription</span>
        </div>
        <div class="flex items-center justify-center space-x-2">
          <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span>Secure & private</span>
        </div>
        <div class="flex items-center justify-center space-x-2">
          <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span>Real-time processing</span>
        </div>
      </div>
    </div>
  </div>
</div>